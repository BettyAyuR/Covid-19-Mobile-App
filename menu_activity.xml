<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/covid19"
    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:text="Aplikasi Penilaian Resiko Pribadi COVID-19"
        android:textColor="#b0bf1a"
        android:textSize="45dp" />

    <Button
        android:id="@+id/btnTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#b5cf5e"
        android:onClick="Test"
        android:text="Mulai Test" />

    <Button
        android:id="@+id/btnTentang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#b5cf5e"
        android:onClick="Tentang"
        android:text="Tentang Aplikasi " />
</LinearLayout>